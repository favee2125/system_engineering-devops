#!/usr/bin/env bash
# This script lists non-hidden files in the current directory
# and shows only the part of each filename after the first dash (-)
for file in *  # This excludes hidden files (those starting with .)
do
  # Extract part after the first dash
  name_after_dash="${file#*-}"
  # Only display if there was a dash in the filename
  if [ "$file" != "$name_after_dash" ]; then
    echo "$name_after_dash"
  fi
done
